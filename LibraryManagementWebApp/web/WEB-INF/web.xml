<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                               http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddReturnedBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddReturnedBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.CreateBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewBorrowedBooks</servlet-name>
        <servlet-class>za.ac.tut.web.ViewBorrowedBooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin_view_books</servlet-name>
        <servlet-class>za.ac.tut.web.Admin_view_books</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BorrowBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.BorrowBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.SearchBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddReturnedBookServlet</servlet-name>
        <url-pattern>/AddReturnedBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateBookServlet</servlet-name>
        <url-pattern>/CreateBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBookServlet</servlet-name>
        <url-pattern>/ViewBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewBorrowedBooks</servlet-name>
        <url-pattern>/ViewBorrowedBooks.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin_view_books</servlet-name>
        <url-pattern>/Admin_view_books.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BorrowBookServlet</servlet-name>
        <url-pattern>/BorrowBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBookServlet</servlet-name>
        <url-pattern>/SearchBookServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
